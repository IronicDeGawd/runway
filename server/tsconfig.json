{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es2020",
        "declaration": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "paths": {
            "@runway/shared": ["../shared/src"]
        }
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": [
        "src"
    ]
}